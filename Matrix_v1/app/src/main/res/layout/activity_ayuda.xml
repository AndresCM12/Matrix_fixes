<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ayuda">

    <Button
        android:id="@+id/btnArrow2"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/flecha"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="@id/guideline4"
        app:layout_constraintBottom_toTopOf="@id/guideline4"
        app:layout_constraintLeft_toLeftOf="@id/guideline8"
        app:layout_constraintRight_toRightOf="@id/guideline8"
        app:layout_constraintDimensionRatio="1.1"/>



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Combinación Lineal?"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/consta"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        android:textColor="@color/black"
        android:paddingTop="25dp"/>



    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Introduce los escalares y en la última columna con lo que los vas a comparar"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="@id/guideline2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/lineal"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        app:layout_constraintRight_toRightOf="@id/guideline8"
        app:layout_constraintLeft_toLeftOf="@id/guideline8"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="3X + 5Y + 3Z = 6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="8X + 9Y + 4Z = 10" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2X + 6Y + 8Z = 9" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenemos Los Vectores:"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/guideline5"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        android:paddingTop="25dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:text="Tutorial De Cómo Capturar Datos"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/guideline6"
        app:layout_constraintBottom_toBottomOf="@id/guideline5"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="@id/guideline2"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consta"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintRight_toRightOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        android:background="@drawable/repeat_grid_2">
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds"
            app:layout_constraintTop_toTopOf="@+id/gl2"
            app:layout_constraintBottom_toBottomOf="@+id/gl2"
            app:layout_constraintRight_toRightOf="@+id/gl11"
            app:layout_constraintLeft_toLeftOf="@+id/gl1"
            >

            <EditText
                android:id="@+id/txt1"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="3"
                android:textSize="18sp"

                android:visibility="visible"
                />

            <EditText
                android:id="@+id/txt2"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="5"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt3"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="3"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt6"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="8"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt7"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="9"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt8"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="4"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt11"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="2"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt12"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="6"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txt13"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="8"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txtA"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="6"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txtB"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="10"
                android:visibility="visible" />

            <EditText
                android:id="@+id/txtC"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:clickable="false"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal|numberSigned"
                android:text="9"
                android:visibility="visible" />

        </GridLayout>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".15" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".85" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".5" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usamos Sus Escalares:"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/lineal"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".92"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".08"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"/>



</androidx.constraintlayout.widget.ConstraintLayout>